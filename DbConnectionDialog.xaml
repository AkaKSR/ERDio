<Window x:Class="ERDio.DbConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DB to ERD - Database Connection" 
    Height="600" Width="700"
        Background="#2D2D30"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.2*"/>
            <ColumnDefinition Width="1.8*"/>
        </Grid.ColumnDefinitions>

        <!-- 좌측: DB 정보 입력 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="DB Type:" Width="70"/>
                <ComboBox x:Name="DbTypeCombo" Width="140" SelectionChanged="OnDbTypeChanged">
                    <ComboBoxItem Content="MySQL" Tag="MySQL" IsSelected="True"/>
                    <ComboBoxItem Content="PostgreSQL" Tag="PostgreSQL"/>
                    <ComboBoxItem Content="Oracle" Tag="Oracle"/>
                    <ComboBoxItem Content="Tibero" Tag="Tibero"/>
                </ComboBox>
            </StackPanel>
            <TextBlock Text="Host:" Margin="0,0,0,6"/>
            <TextBox x:Name="HostTextBox" Text="localhost" Margin="0,0,0,12"/>
            <TextBlock Text="Port:" Margin="0,0,0,6"/>
            <TextBox x:Name="PortTextBox" Text="3306" Margin="0,0,0,12" PreviewTextInput="OnPortPreviewTextInput"/>
            <TextBlock Text="ID:" Margin="0,0,0,6"/>
            <TextBox x:Name="IdTextBox" Margin="0,0,0,12"/>
            <TextBlock Text="Password:" Margin="0,0,0,6"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,12"/>
            <TextBlock x:Name="DatabaseLabel" Text="Database:" Margin="0,0,0,6"/>
            <TextBox x:Name="DatabaseTextBox" Margin="0,0,0,12"/>
            <TextBlock x:Name="SchemaLabel" Text="Schema:" Margin="0,0,0,6" Visibility="Collapsed"/>
            <TextBox x:Name="SchemaTextBox" Text="public" Margin="0,0,0,12" Visibility="Collapsed"/>
        </StackPanel>

        <!-- 우측: 프로필/설명 -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="ProfileName" Width="120" Margin="0,0,10,0"/>
                <Button Content="Save" Width="50" Margin="0,0,5,0" Click="OnSaveProfile"/>
                <Button Content="Remove" Width="60" Click="OnRemoveProfile"/>
            </StackPanel>
            <ListBox x:Name="DescriptionListBox" Height="180" Margin="0,0,0,0"
                     Background="#3E3E42" Foreground="#E0E0E0" BorderBrush="#555" BorderThickness="1" Padding="8,6"
                     SelectionChanged="OnProfileSelected"/>
        </StackPanel>

        <!-- 하단: 버튼 -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Execute" Style="{StaticResource ActionButtonStyle}" 
                    Background="#007ACC" Foreground="White" BorderBrush="#005A9E"
                    Margin="0,0,10,0" Click="OnExecute"/>
            <Button Content="Cancel" Style="{StaticResource ActionButtonStyle}"
                    Background="#3E3E42" Foreground="#E0E0E0" BorderBrush="#555"
                    Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
