<UserControl x:Class="ERDio.Controls.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400"
             MouseLeftButtonDown="OnMouseLeftButtonDown"
             MouseMove="OnMouseMove"
             MouseLeftButtonUp="OnMouseLeftButtonUp"
             MouseRightButtonDown="OnMouseRightButtonDown">
    
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Add Column" Click="OnAddColumn">
                <MenuItem.Icon>
                    <TextBlock Text="âž•" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Edit Table" Click="OnEditTable">
                <MenuItem.Icon>
                    <TextBlock Text="âœï¸" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Change Color">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸŽ¨" FontSize="12"/>
                </MenuItem.Icon>
                <MenuItem Header="Red" Click="OnChangeColorRed" Tag="#DC3C3C"/>
                <MenuItem Header="Blue" Click="OnChangeColorBlue" Tag="#5050B4"/>
                <MenuItem Header="Green" Click="OnChangeColorGreen" Tag="#3CB371"/>
                <MenuItem Header="Purple" Click="OnChangeColorPurple" Tag="#C864C8"/>
                <MenuItem Header="Orange" Click="OnChangeColorOrange" Tag="#FF8C00"/>
                <MenuItem Header="Teal" Click="OnChangeColorTeal" Tag="#20B2AA"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Delete Table" Click="OnDeleteTable">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.ContextMenu>
    
    <Border BorderBrush="#555" BorderThickness="1" Background="#2D2D30" CornerRadius="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Table Header -->
            <Border Grid.Row="0" Background="{Binding HeaderBrush}" CornerRadius="3,3,0,0" Padding="8,4"
                    MouseLeftButtonDown="OnHeaderMouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TableNameText" Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="12"
                                   MouseLeftButtonDown="OnTableNameMouseDown"/>
                        <TextBox x:Name="TableNameEdit" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                 FontWeight="Bold" Foreground="White" Background="Transparent" BorderThickness="0,0,0,1"
                                 BorderBrush="White" FontSize="12" Visibility="Collapsed" MinWidth="80"
                                 LostFocus="OnTableNameEditLostFocus" KeyDown="OnTableNameEditKeyDown"/>
                        <TextBlock Text="{Binding Comment}" Foreground="#CCC" FontSize="11" Margin="10,0,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1" Content="+" ToolTip="Add Column" 
                            Background="Transparent" BorderThickness="0" Foreground="White" 
                            FontSize="14" FontWeight="Bold" Cursor="Hand" Padding="5,0"
                            Click="OnAddColumnClick"/>
                </Grid>
            </Border>
            
            <!-- Columns -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Columns}" Background="#2D2D30">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#444" BorderThickness="0,0,0,1" Padding="4,2"
                                MouseRightButtonDown="OnColumnRightClick" Tag="{Binding}">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Toggle Primary Key" Click="OnTogglePrimaryKey"/>
                                    <MenuItem Header="Toggle Foreign Key" Click="OnToggleForeignKey"/>
                                    <MenuItem Header="Toggle Nullable" Click="OnToggleNullable"/>
                                    <Separator/>
                                    <MenuItem Header="Move Up" Click="OnMoveColumnUp"/>
                                    <MenuItem Header="Move Down" Click="OnMoveColumnDown"/>
                                    <Separator/>
                                    <MenuItem Header="Delete Column" Click="OnDeleteColumn"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*" MinWidth="80"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Key Icon -->
                                <TextBlock Grid.Column="0" FontSize="10" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value=""/>
                                            <Setter Property="Foreground" Value="#FFD700"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPrimaryKey}" Value="True">
                                                    <Setter Property="Text" Value="ðŸ”‘"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsForeignKey}" Value="True">
                                                    <Setter Property="Text" Value="ðŸ”—"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!-- Column Name (Editable) -->
                                <Grid Grid.Column="1" Margin="2,0">
                                    <TextBlock x:Name="NameText" Text="{Binding Name}" Foreground="#E0E0E0" 
                                              FontSize="11" VerticalAlignment="Center"
                                              MouseLeftButtonDown="OnColumnNameMouseDown"/>
                                    <TextBox x:Name="NameEdit" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                            Foreground="#E0E0E0" Background="#3E3E42" BorderBrush="#555"
                                            FontSize="11" VerticalAlignment="Center" Visibility="Collapsed"
                                            LostFocus="OnEditLostFocus" KeyDown="OnEditKeyDown"/>
                                </Grid>
                                
                                <!-- Data Type (Editable) -->
                                <Grid Grid.Column="2" Margin="2,0">
                                    <TextBlock x:Name="DataTypeText" Text="{Binding DataType}" Foreground="#9CDCFE" 
                                              FontSize="11" VerticalAlignment="Center"
                                              MouseLeftButtonDown="OnDataTypeMouseDown"/>
                                    <TextBox x:Name="DataTypeEdit" Text="{Binding DataType, UpdateSourceTrigger=PropertyChanged}" 
                                            Foreground="#9CDCFE" Background="#3E3E42" BorderBrush="#555"
                                            FontSize="11" VerticalAlignment="Center" Visibility="Collapsed"
                                            LostFocus="OnEditLostFocus" KeyDown="OnEditKeyDown"/>
                                </Grid>
                                
                                <!-- Nullable -->
                                <TextBlock Grid.Column="3" Text="{Binding NullableText}" Foreground="#E0E0E0" 
                                          FontSize="10" VerticalAlignment="Center" Margin="2,0"
                                          MouseLeftButtonDown="OnNullableClick" Cursor="Hand"/>
                                
                                <!-- Default (Editable) -->
                                <Grid Grid.Column="4" Margin="2,0">
                                    <TextBlock x:Name="DefaultText" Text="{Binding DefaultValue, TargetNullValue='default'}" Foreground="#E0E0E0" 
                                              FontSize="10" VerticalAlignment="Center" Cursor="Hand"
                                              MouseLeftButtonDown="OnDefaultMouseDown">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DefaultValue}" Value="">
                                                        <Setter Property="Text" Value="default"/>
                                                        <Setter Property="Foreground" Value="#A0A0A0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox x:Name="DefaultEdit" Text="{Binding DefaultValue, UpdateSourceTrigger=PropertyChanged}" 
                                            Foreground="#E0E0E0" Background="#3E3E42" BorderBrush="#555"
                                            FontSize="10" VerticalAlignment="Center" Visibility="Collapsed"
                                            LostFocus="OnEditLostFocus" KeyDown="OnEditKeyDown"/>
                                </Grid>
                                
                                <!-- Comment (Editable) -->
                                <Grid Grid.Column="5" Margin="2,0">
                                    <TextBlock x:Name="CommentText" Text="{Binding Comment, TargetNullValue='comment'}" Foreground="#E0E0E0" 
                                              FontSize="10" VerticalAlignment="Center" Cursor="Hand"
                                              MouseLeftButtonDown="OnCommentMouseDown">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Comment}" Value="">
                                                        <Setter Property="Text" Value="comment"/>
                                                        <Setter Property="Foreground" Value="#A0A0A0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox x:Name="CommentEdit" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" 
                                            Foreground="#E0E0E0" Background="#3E3E42" BorderBrush="#555"
                                            FontSize="10" VerticalAlignment="Center" Visibility="Collapsed"
                                            LostFocus="OnEditLostFocus" KeyDown="OnEditKeyDown"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
