<Window x:Class="ERDio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ERDio.ViewModels"
        mc:Ignorable="d"
        Title="ERDio - Entity Relationship Diagram Editor" 
        Height="700" Width="1200"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding DatabaseName}" 
                         Background="#3E3E42" Foreground="#E0E0E0" 
                         BorderBrush="#555" BorderThickness="1"
                         Padding="8,4" Width="150" VerticalContentAlignment="Center"/>
                
                <Separator Width="20" Visibility="Hidden"/>
                
                <TextBlock Text="{Binding Zoom, StringFormat={}{0:0}}" 
                           Foreground="#E0E0E0" VerticalAlignment="Center" Width="40"/>
                <TextBlock Text="%" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                
                <Separator Width="20" Visibility="Hidden"/>
                
                <!-- Toolbar Buttons -->
                <Button Content="➕" ToolTip="New Table" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnAddTable"/>
                <Button Content="🔗" ToolTip="Add Relationship" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnAddRelationship"/>
                <Button Content="📷" ToolTip="Export Image" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnExportImage"/>
                <Button Content="📜" ToolTip="Export SQL" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnExportSql"/>
                <Button Content="💾" ToolTip="Save" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnSave"/>
                <Button Content="📂" ToolTip="Load" Style="{StaticResource ToolbarButtonStyle}" Margin="2" Click="OnLoad"/>
            </StackPanel>
        </Border>
        
        <!-- Main Canvas Area -->
        <Border Grid.Row="1" Background="#1E1E1E" ClipToBounds="True">
            <Grid>
                <!-- Grid Pattern Background -->
                <Canvas x:Name="GridCanvas" Background="Transparent"/>
                
                <!-- Main ERD Canvas -->
                <ScrollViewer x:Name="CanvasScrollViewer"
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              PanningMode="Both">
                    <Canvas x:Name="ErdCanvas" 
                            Width="2000" Height="2000" 
                            Background="Transparent"
                            MouseWheel="OnCanvasMouseWheel"
                            MouseLeftButtonDown="OnCanvasMouseLeftButtonDown"
                            MouseLeftButtonUp="OnCanvasMouseLeftButtonUp"
                            MouseMove="OnCanvasMouseMove">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="{Binding ZoomScale}" ScaleY="{Binding ZoomScale}"/>
                        </Canvas.LayoutTransform>
                    </Canvas>
                </ScrollViewer>
                
                <!-- Minimap -->
                <Border Width="100" Height="70" 
                        Background="#2D2D30" 
                        BorderBrush="#555" BorderThickness="1"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,10,25,0" CornerRadius="3">
                    <Canvas x:Name="MinimapCanvas" ClipToBounds="True"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="5,2">
            <TextBlock Text="Ready" Foreground="White" FontSize="11"/>
        </Border>
    </Grid>
</Window>
